{
  "name": "pudding",
  "displayName": "布丁助手",
  "publisher": "gornin",
  "description": "汉字转拼音、简繁互换、自动复制、TO BE CONTINUED...",
  "version": "1.0.11",
  "email": "gorningo@outlook.com",
  "engines": {
    "vscode": "^1.46.0"
  },
  "icon": "logo.jpeg",
  "categories": [
    "Other"
  ],
  "keywords": [
    "布丁",
    "简体",
    "繁体",
    "拼音",
    "选中复制",
    "剪切板",
    "汉字",
    "gornin",
    "pudding"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gornin/pudding"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "布丁助手",
      "properties": {
        "pudding.copyOnKeyboardSelection": {
          "type": "boolean",
          "default": false,
          "description": "当使用键盘选择文本时，是否复制所选文本？"
        },
        "pudding.copyOnMouseSelection": {
          "type": "boolean",
          "default": true,
          "description": "当使用鼠标选择文本时，是否复制所选文本？"
        },
        "pudding.trimStartBlank": {
          "type": "boolean",
          "default": false,
          "description": "是否修剪所选文本的开头空白部分?"
        },
        "pudding.trimEndBlank": {
          "type": "boolean",
          "default": true,
          "description": "是否修剪所选文本的结尾空白部分?"
        }
      }
    },
    "commands": [
      {
        "command": "pudding.chars-2-pinyin-upper",
        "title": "汉字->拼音 大"
      },
      {
        "command": "pudding.chars-2-pinyin-lower",
        "title": "汉字->拼音 小"
      },
      {
        "command": "pudding.s-2-t",
        "title": "简->繁"
      },
      {
        "command": "pudding.t-2-s",
        "title": "繁->简"
      }
    ],
    "keybindings": [
      {
        "command": "pudding.chars-2-pinyin-upper",
        "key": "ctrl+shift+alt+u",
        "mac": "ctrl+alt+cmd+u",
        "when": "editorTextFocus"
      },
      {
        "command": "pudding.chars-2-pinyin-lower",
        "key": "ctrl+shift+alt+l",
        "mac": "ctrl+alt+cmd+l",
        "when": "editorTextFocus"
      },
      {
        "command": "pudding.s-2-t",
        "key": "ctrl+shift+alt+f",
        "mac": "ctrl+alt+cmd+f",
        "when": "editorTextFocus"
      },
      {
        "command": "pudding.t-2-s",
        "key": "ctrl+shift+alt+j",
        "mac": "ctrl+alt+cmd+j",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "pudding.chars-2-pinyin-upper",
          "group": "navigation@11",
          "when": "editorHasSelection"
        },
        {
          "command": "pudding.chars-2-pinyin-lower",
          "group": "navigation@12",
          "when": "editorHasSelection"
        },
        {
          "command": "pudding.s-2-t",
          "group": "navigation@13",
          "when": "editorHasSelection"
        },
        {
          "command": "pudding.t-2-s",
          "group": "navigation@14",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "prepare": "husky install",
    "vscode:prepublish": "yarn run build-webpack",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "webpack -c ./build/webpack.config.js --watch",
    "build": "yarn run esbuild-base --minify",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "release": "standard-version -a",
    "package": "vsce package --no-yarn",
    "publish": "vsce publish --no-yarn",
    "build-webpack": "webpack -c ./build/webpack.config.js",
    "build-esbuild": "node ./build/esbuild.config.js",
    "build-vite": "vite build -c ./build/vite.config.js",
    "build-rollup": "yarn run rollup -c ./build/rollup.config.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "ts-loader": "^9.4.2"
  },
  "dependencies": {
    "debounce": "1.0.0",
    "pinyin": "^3.0.0-alpha.5",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@swc/core": "^1.2.179",
    "@types/koa": "^2.13.4",
    "connect": "^3.7.0",
    "esbuild": "^0.14.38",
    "esbuild-loader": "^2.18.0",
    "esbuild-plugin-clean": "^0.9.0",
    "get-port": "^6.1.2",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rollup": "^2.72.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-swc3": "^0.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "standard-version": "^9.3.2",
    "typescript": "^4.5.5",
    "umi-request": "^1.4.0",
    "vite": "^2.9.8",
    "vsce": "^2.7.0",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
